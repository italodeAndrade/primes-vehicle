<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    #navbar {
        position: sticky;   
        top: 0; 
        z-index: 1000;
      }
</style>
<body>
    <div id="navbar"> <%- include('../../features/index') %></div>
    <div id="register">
        <h1>Register</h1>
        <form id="form_user" enctype="multipart/form-data">
          <input type="file" id="photo_user" name="photo" accept="image/*" required>
          <input type="text" id="name" name="name" placeholder="Name" required>
          <input type="text" id="email" name="email" placeholder="Email" required>
          <input type="text" id="phone" name="phone" placeholder="Phone">
          <input type="text" id="address" name="address" placeholder="Address">
          <input type="text" id="cpf" name="cpf" placeholder="CPF" required>
          <input type="date" id="birth" name="dt_birth" placeholder="Birth" required>
          <input type="password" id="password" name="password" placeholder="Insert your Password..." required>
          <input type="password" id="password2" name="password2" placeholder="Repeat the password..." required>
          <button type="submit">Register</button>
          <a href="/login">Already have account?</a>
        </form>        
    </div>
</body>
</html>

<script>
  document.getElementById('form_user').addEventListener('submit', async (e) => {
      e.preventDefault();
  
      const form = document.getElementById('form_user');
      const formData = new FormData(form);
  
      try {
          const response = await fetch('/register_user', {
              method: 'POST',
              body: formData
          });
  
          const data = await response.json();
  
          if (data.error) {
              alert(data.error);
          } else {
              window.location.href = '/login'; 
          }
      } catch (error) {
          console.error('Erro no registro:', error);
          alert('Erro inesperado ao registrar usu√°rio');
      }
  });
  </script>
  
