<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel Administrativo</title>
    <link rel="stylesheet" href="css/adm.css">
    <%- include('../../features/index') %>
</head>
<body>

    <!-- overlays ocultos -->
    <div id="container_conf">
        <div class="confirmation-box">
            <span class="fechar" onclick="cls_conf()">&times;</span>
            <p>Digite "CONFIRMAR" para deletar:</p>
            <input type="hidden" value="null" id="id">
            <input type="hidden" value="null" id="type">
            <input type="text" id="confirmationInput">
            <button onclick="process_conf()">deletar</button>
        </div>
    </div>

    <div id="container_new">
        <div class="confirmation-box">
            <span class="fechar" onclick="close_new()">&times;</span>
            <p>Adicionar Carro</p>
            <form id="form_new" action="/add_car" method="POST" enctype="multipart/form-data">
                <select name="marca_id" id="marca" required>
                    <option value="">Selecione a Marca</option>
                </select>
                
                <select name="modelo_id" id="modelo" required disabled>
                    <option value="">Selecione o Modelo</option>
                </select>

                <input type="number" name="ano_fabricacao" placeholder="Ano Fabricação" min="1886" required>
                <input type="number" name="ano_modelo" placeholder="Ano Modelo" min="1886" required>
                <input type="text" name="cor" placeholder="Cor" required>
                
                <select name="automatico" required>
                    <option value="true">Automático</option>
                    <option value="false">Manual</option>
                </select>

                <input type="number" name="quilometragem" placeholder="Quilometragem (km)" min="0" required>
                <input type="number" name="preco" placeholder="Preço" step="0.01" required>
                
                <input type="file" name="photo" multiple accept=".jpg, .jpeg, .png">
                <button type="submit">Adicionar</button>
            </form>
        </div>
    </div>
    <!-- overlays ocultos -->

    <div class="container-cars">
        <h1>Carros</h1>
        <div class="controls">
            <button onclick="load_cars()">Atualizar</button>
            <button onclick="open_new()">Adicionar Carro</button>
        </div>
        <div id="cars"></div>
    </div>

    <div class="container-users">
        <h1>Usuários</h1>
        <div class="controls">
            <button onclick="load_users()">Atualizar</button>
            <button>Adicionar Usuário</button>
        </div>
        <div id="users"></div>
    </div>

<script>
    let currentDeletion = { type: null, id: null };

    window.onload = function() {
        load_cars();    
        load_users();
        initMarcasSelect();
    };

    // Inicializa o select de marcas
    async function initMarcasSelect() {
        try {
            const response = await fetch('/get_marcas');
            const marcas = await response.json();
            const select = document.getElementById('marca');
            
            marcas.forEach(marca => {
                const option = document.createElement('option');
                option.value = marca.id;
                option.textContent = marca.nome;
                select.appendChild(option);
            });
        } catch (error) {
            console.error('Erro ao carregar marcas:', error);
        }
    }

    // Carrega modelos quando selecionar marca
    document.getElementById('marca').addEventListener('change', async function() {
        const marcaId = this.value;
        const modeloSelect = document.getElementById('modelo');
        
        if (!marcaId) {
            modeloSelect.innerHTML = '<option value="">Selecione o Modelo</option>';
            modeloSelect.disabled = true;
            return;
        }

        try {
            const response = await fetch(`/get_modelos?marca_id=${marcaId}`);
            const modelos = await response.json();
            
            modeloSelect.innerHTML = '<option value="">Selecione o Modelo</option>';
            modeloSelect.disabled = false;
            
            modelos.forEach(modelo => {
                const option = document.createElement('option');
                option.value = modelo.id;
                option.textContent = modelo.nome;
                modeloSelect.appendChild(option);
            });
        } catch (error) {
            console.error('Erro ao carregar modelos:', error);
        }
    });

    function open_conf(type, id) {
        const container = document.getElementById('container_conf');
        const tipo = document.getElementById('type');
        const idInput = document.getElementById('id');
        idInput.value = id;
        tipo.value = type;
        container.style.display = 'block';
    }

    function cls_conf() {
        const container = document.getElementById('container_conf');
        const tipo = document.getElementById('type');
        const id = document.getElementById('id');
        id.value = null;
        tipo.value = null;
        container.style.display = 'none';
    }

    function process_conf() {
        const confirmationInput = document.getElementById('confirmationInput').value;
        const tipo = document.getElementById('type').value;
        const id = document.getElementById('id').value;

        if (confirmationInput === 'CONFIRMAR') {
            if (tipo == 0) {
                fetch(`/delete_car/${id}`)
                    .then(() => load_cars());
            } 
            else if (tipo == 1) {
                fetch(`/delete_user/${id}`)
                    .then(() => load_users());
            }
        }
        cls_conf();
    };
    
    function open_new() {
        const container = document.getElementById('container_new');
        container.style.display = 'block';  
    }

    function close_new() {
        const container = document.getElementById('container_new');
        container.style.display = 'none';  
    }

    function load_cars() {
        fetch('/load_cars')
        .then(response => response.json())
        .then(data => {
            const container = document.getElementById('cars');
            container.innerHTML = '';

            data.forEach(car => {
                const carDiv = document.createElement('div');
                carDiv.className = 'car-item';
                carDiv.innerHTML = `
                    <div class="car-details">
                        <p>Modelo: ${car.model}</p>
                        <p>Marca: ${car.brand}</p>
                        <p>Ano: ${car.year}</p>
                        <p>Preço: R$ ${car.price.toLocaleString('pt-BR')}</p>
                        <p>Quilometragem: ${car.km_driven.toLocaleString('pt-BR')} km</p>
                    </div>
                    <div class="car-image">
                        ${car.images.length > 0 ? 
                            `<img src="${car.images[0]}" alt="${car.model}" style="max-width: 200px;">` : 
                            '<p>Sem imagem</p>'}
                    </div>
                    <div class="car-actions">
                        <button onclick="window.location.href='/load_dt/${car.id}'">Detalhes</button>
                        <button onclick="open_conf(0,${car.id})">Deletar</button>
                        <button onclick="edit_car(${car.id})">Editar</button>
                    </div>
                `;
                container.appendChild(carDiv);
            });
        })
        .catch(error => console.error('Erro ao carregar carros:', error));
    }

    function load_users() {
        fetch('/load_users')
        .then(response => response.json())
        .then(data => {
            const container = document.getElementById('users');
            container.innerHTML = '';

            data.forEach(user => {
                const userDiv = document.createElement('div');
                userDiv.className = 'user-item';
                userDiv.innerHTML = `
                    <div class="user-info">
                        <p>Nome: ${user.nome}</p>
                        <p>Email: ${user.email}</p>
                        <p>CPF: ${user.cpf}</p>
                        <p>Telefone: ${user.telefone}</p>
                    </div>
                    <div class="user-actions">
                        <button onclick="open_conf(1,${user.id})">Deletar</button>
                    </div>
                `;
                container.appendChild(userDiv);
            });
        })
        .catch(error => console.error('Erro ao carregar usuários:', error));
    }
</script>
</body>
</html>