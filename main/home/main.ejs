<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="mnstl.css">
    <%- include('../features/index') %>
</head>
<body>
    <div id="announcment1" ></div>
    <div id="announcment2" ></div>
    <div id="cars_container"></div>
</body>
</html>
<script>
    function load_detail(id) {
        window.location.href = `/load_dt/${id}`;
    };

    function load_cars() {
        fetch('/load_cars')
        .then(response => response.json())  
        .then(data => {
            const body_cars = document.getElementById('cars_container');
            body_cars.innerHTML = '';

            data.forEach(car => {
                const car_container = document.createElement('div');
                car_container.innerHTML = `
                    <p>${car.price}</p>
                    <p>${car.year}</p>
                    <p>${car.km_driven}</p>
                    <p>${car.brand}</p>
                    <p>${car.model}</p>
                    <button onclick="load_detail(${car.id})">View Details</button>
                `;
                body_cars.appendChild(car_container);
            });
        })
        .catch(err => console.error('Error fetching cars:', err));  
    }

    window.onload = function() {
        load_cars();    
    };
</script>
